@page "/categoryList"
@inherits CategoryListBase


    <div class="border">
        <div class="card-header text-center">
            <h1>List of Categories</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Categories)
                    {
                        <tr>
                            <td>@item.CategoryID</td>
                            <td>@item.CategoryName</td>
                            <td>
                                <a class="btn btn-primary" style="font-weight: bold" href="@($"/categoryDetail/{item.CategoryID}")">
                                    <i class="oi oi-book">View</i>
                                </a>
                                <a class="btn btn-warning" style="font-weight: bold" href="@($"/editCategory/{item.CategoryID}")">
                                    <i class="oi oi-pencil">Edit</i>
                                </a>
                                <a class="btn btn-danger" style="font-weight: bold" href="@($"/deleteCategory/{item.CategoryID}")">
                                    <i class="oi oi-delete">Delete</i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary btn-block" href="addCategory" style="font-weight: bold">Create Category</a>
        </div>
    </div>
<br/>
<br/>